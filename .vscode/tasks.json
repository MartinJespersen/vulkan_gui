{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building the project"
        },
        {
            "label": "build for profiling",
            "type": "shell",
            "command": "./profile_build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building the project"
        },
        {
            "label": "MSC debug",
            "type": "shell",
            "windows": {
                "command": ".\\debug.bat",

            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": [
                        "/c",
                        "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Enterprise\\VC\\Auxiliary\\Build\\vcvars64.bat\" &&"
                    ]
                },"cwd": "${workspaceFolder}"
            },
            "detail": "build and debug with raddebugger"
        }
    ]
}