    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/VulkanTest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // {
                //     "name": "LD_DEBUG",
                //     "value": "all"
                // }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
                // {
                //     "description": "Follow fork",
                //     "text": "set follow-fork-mode child",
                //     "ignoreFailures": true
                // },
                // {
                //     "description": "Follow exec",
                //     "text": "set follow-exec-mode new",
                //     "ignoreFailures": true
                // }
            ],
            "preLaunchTask": "build project",
            "miDebuggerPath": "/usr/bin/gdb",
            "sourceFileMap": {
                ".": "/usr/src/glibc/glibc-2.35",
                "./dlfcn/": "/usr/src/glibc/glibc-2.35",
                "./elf/": "/usr/src/glibc/glibc-2.35"
            }
        },
        {
            "name": "profiler debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/profiler/profiler_exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // {
                //     // "name": "LD_DEBUG",
                //     // "value": "all"
                // }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build for profiling",
            "miDebuggerPath": "/usr/bin/gdb",
            "sourceFileMap": {
                ".": "/usr/src/glibc/glibc-2.35",
                "./dlfcn/": "/usr/src/glibc/glibc-2.35",
                "./elf/": "/usr/src/glibc/glibc-2.35"
            }
        }
    ]
}